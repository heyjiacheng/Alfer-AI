{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ai-desktop-assistant",
  "version": "0.1.0",
  "identifier": "com.gitai.aiassistant",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "√Ålfer AI 1.0",
        "width": 1200,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 800,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
